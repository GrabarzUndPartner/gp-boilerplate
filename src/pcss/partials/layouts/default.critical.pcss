html,
body {
  padding: 0;
  margin: 0;
}

*,
*::before,
*::after {
  box-sizing: inherit;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-touch-callout: none;
}

* {
  box-sizing: border-box;
}

.disable-hover,
.disable-hover * {
  pointer-events: none !important;
}

.partial[data-partial="layouts/default"] {
  & .no-select {
    user-select: none;
  }
}
